{
    // Editor Settings
    "workbench.editor.showTabs": false,
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Mayukai Alucard",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "editor.fontSize": 18,
    "editor.lineHeight": 24,
    "editor.fontWeight": "400",
    "editor.fontFamily": "Hasklug Nerd Font Light, SauceCodePro Nerd Font, Source Code Pro, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.minimap.enabled": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["c", "i", "a"],
            "after": ["c", "i", "w"]
        },
        {
            "before": ["v", "i", "e"],
            "after": ["v", "i", "w"]
        }
    ],
    "vim.useCtrlKeys": false,
    "vim.cursorStylePerMode.normal": "line",

    // Terminal & Files Settings
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "WSL": { "path": "C:/Windows/System32/wsl.exe" }
    },
    "terminal.integrated.gpuAcceleration": "on",
    "files.associations": { "*.css": "css" },
    "files.exclude": { "**/node_modules": true },
    "search.exclude": {
        "**/vendor": true
    },
    "search.searchOnType": false,

    // Extensions Settings
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "prettier.semi": false,
    "prettier.tabWidth": 4,
    "sqltools.connections": [],
    "sqltools.formatLanguages": ["sql", "php"],
    "sqltools.autoOpenSessionFiles": false,
    "sqltools.completionLanguages": ["sql", "php"],
    "sqltools.results.reuseTabs": "connection",
    "sqltools.codelensLanguages": [],
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.advanced": {},
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "svelte",
        "vue",
        "markdown",
        "plaintext"
    ],
    "vsicons.dontShowNewVersionMessage": true,
    "svelte.enable-ts-plugin": true,
    "emmet.includeLanguages": {
        "aspnetcorerazor": "html",
        "javascript": "javascriptreact"
    },
    "security.allowedUNCHosts": ["wsl.localhost"],
    "redhat.telemetry.enabled": true,

    // Languange Settings
    "php.suggest.basic": false,
    "json.schemas": [],
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "css.lint.unknownAtRules": "ignore",
    "[python]": {
        "editor.formatOnType": true
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "typescript.updateImportsOnFileMove.enabled": "never",
    "javascript.updateImportsOnFileMove.enabled": "never",

    // Other Settings
    "task.slowProviderWarning": ["npm"],
    "launch": {
        "configurations": [],
        "compounds": []
    }
}
